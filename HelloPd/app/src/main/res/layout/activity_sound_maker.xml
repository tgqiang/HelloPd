<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sound_maker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tay.hellopd.SoundMakerActivity">

    <TextView
        android:text="Accelerometer X (pure reading, and with adjusting):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:id="@+id/accXLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accXValue"
        android:text="None"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/accXLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="None"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adjustedX"
        android:layout_alignBottom="@+id/accXValue"
        android:layout_alignParentLeft="@+id/accXValue"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="100dp" />

    <TextView
        android:text="Accelerometer Y (pure reading, and with adjusting):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accYLabel"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/accXLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accYValue"
        android:text="None"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/accYLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="None"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adjustedY"
        android:layout_alignBottom="@+id/accYValue"
        android:layout_alignParentLeft="@+id/accYValue"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="100dp" />

    <TextView
        android:text="Accelerometer Z:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accZLabel"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/accYLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accZValue"
        android:text="None"
        android:layout_alignBaseline="@+id/accZLabel"
        android:layout_alignBottom="@+id/accZLabel"
        android:layout_toRightOf="@+id/accZLabel"
        android:layout_toEndOf="@+id/accZLabel"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <TextView
        android:text="Instrument being emulated:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/instrumentLabel"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Instrument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/instrumentLabel"
        android:layout_toEndOf="@+id/instrumentLabel"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:id="@+id/instrumentInput"
        android:textStyle="normal|bold" />

</RelativeLayout>
